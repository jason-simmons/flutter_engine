if (is_ios || is_mac) {
  import("//common/config.gni")
  import("//testing/testing.gni")

  source_set("spring_animation") {
    sources = [
      "spring_animation.h",
      "spring_animation.mm",
    ]
    public_configs = [ "//flutter:config" ]
  }

  if (enable_unittests) {
    test_fixtures("spring_animation_fixtures") {
      fixtures = []
    }

    executable("spring_animation_unittests") {
      testonly = true
      sources = [ "SpringAnimationTest.mm" ]
      deps = [
        ":spring_animation",
        ":spring_animation_fixtures",
        "//testing",
      ]
      public_configs = [ "//flutter:config" ]
    }
  }
}
