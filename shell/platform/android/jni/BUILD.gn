import("//common/config.gni")
import("//testing/testing.gni")

source_set("jni") {
  sources = [
    "platform_view_android_jni.cc",
    "platform_view_android_jni.h",
  ]

  public_configs = [ "//flutter:config" ]

  deps = [
    "//flow",
    "//fml",
    "//lib/ui",
    "//shell/platform/android/surface:native_window",
    "//skia",
  ]
}

source_set("jni_mock") {
  testonly = true

  sources = [ "jni_mock.h" ]

  public_configs = [ "//flutter:config" ]

  deps = [ ":jni" ]
}

test_fixtures("jni_fixtures") {
  fixtures = []
}

executable("jni_unittests") {
  testonly = true

  sources = [ "jni_mock_unittest.cc" ]

  deps = [
    ":jni_fixtures",
    ":jni_mock",
    "//testing",
    "//testing:dart",
    "//testing:skia",
  ]
}
