import("//engine_tools/fuchsia/dart/dart_library.gni")
import("//engine_tools/fuchsia/flutter/flutter_component.gni")
import("//engine_tools/fuchsia/gn-sdk/src/gn_configs.gni")
import("//engine_tools/fuchsia/gn-sdk/src/package.gni")

dart_library("lib") {
  package_name = "parent-view"
  sources = [ "parent_view.dart" ]

  deps = [
    "//shell/platform/fuchsia/dart:args",
    "//shell/platform/fuchsia/dart:vector_math",
